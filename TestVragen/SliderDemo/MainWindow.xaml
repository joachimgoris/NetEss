<Window x:Class="SliderDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Slider IsSnapToTickEnabled="True" LargeChange="40" Name="ValueSlider" Minimum="0" Maximum="100" Value="10" TickFrequency="20" TickPlacement="BottomRight" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="248" ValueChanged="ValueSlider_ValueChanged" />
        <TextBox Name="ValueTextBox" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="10,39,0,0"/>


    </Grid>
</Window>
